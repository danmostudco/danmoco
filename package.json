{
    "name": "portfolio",
    "version": "0.1.0",
    "description": "dans portfolio and personal site redone in next",
    "main": "index.js",
    "scripts": {
        "dev": "next",
        "build": "next build",
        "start": "cross-env NODE_ENV=production next start",
        "imageoptim": "npm imageoptim:gif && npm imageoptim:jpg && npm imageoptim:png",
        "imageoptim:gif": "imageoptim \"public/static/**/*.gif\"",
        "imageoptim:jpg": "imageoptim \"public/static/**/*.jpg\"",
        "imageoptim:png": "imageoptim --no-imageoptim --imagealpha \"public/static/**/*.png\"",
        "prettier": "prettier --write \"**/*.{html,js,json,md,mdx,mjs,yml}\"",
        "lint": "eslint . --ext .json --ext .js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{html,js,json,md,mdx,mjs,yml}": [
            "prettier --write",
            "git add"
        ],
        "*.gif": [
            "imageoptim",
            "git add"
        ],
        "*.jpg": [
            "imageoptim",
            "git add"
        ],
        "*.png": [
            "imageoptim --no-imageoptim --imagealpha",
            "git add"
        ]
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@mapbox/rehype-prism": "^0.3.1",
        "@mdx-js/mdx": "^1.5.5",
        "date-fns": "^1.30.1",
        "isomorphic-unfetch": "^3.0.0",
        "next": "^11.1.3",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-syntax-highlighter": "^12.2.1",
        "styled-components": "^4.3.1",
        "styled-reset": "^4.1.0",
        "title": "^3.4.1"
    },
    "devDependencies": {
        "@mdx-js/loader": "^1.5.5",
        "@mdx-js/tag": "^0.20.3",
        "@next/mdx": "^8.1.0",
        "babel-plugin-inline-react-svg": "^1.1.1",
        "babel-plugin-styled-components": "^1.10.7",
        "cpy": "^7.3.0",
        "cross-env": "^5.2.1",
        "del": "^5.1.0",
        "eslint": "^6.8.0",
        "eslint-config-get-off-my-lawn": "^5.0.1",
        "execa-output": "^2.0.0",
        "globby": "^10.0.2",
        "husky": "^3.1.0",
        "imageoptim-cli": "^3.0.2",
        "lint-staged": "^8.1.0",
        "listr": "^0.14.3",
        "prettier": "^1.19.1",
        "prettify-xml": "^1.2.0"
    }
}
